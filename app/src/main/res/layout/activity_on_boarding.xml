<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="50dp"
    android:paddingEnd="50dp"
    tools:context=".OnBoarding">

    <TextView
        android:id="@+id/headtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins"
        android:text="Find Your Man"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo1" />

    <TextView
        android:id="@+id/tailteks1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Tentukan pekerja terbaik"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headtext" />

    <TextView
        android:id="@+id/tailteks2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="untuk proyekmu"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tailteks1" />

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="274dp"
        android:layout_height="345dp"
        android:layout_marginTop="71dp"
        app:layout_constraintBottom_toTopOf="@+id/headtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/onbording_logo1" />

    <ImageView
        android:id="@+id/geser1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tailteks2"
        app:srcCompat="@drawable/onboarding_ellipse1" />

    <ImageView
        android:id="@+id/geser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="62dp"
        app:layout_constraintStart_toEndOf="@+id/geser1"
        app:layout_constraintTop_toBottomOf="@+id/tailteks2"
        app:srcCompat="@drawable/onboarding_ellipse2" />

    <Button
        android:id="@+id/btnLewat"
        android:layout_width="151dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#1E74FF"
        android:text="Lewati"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geser1" />

    <Button
        android:id="@+id/btnLanjut"
        android:layout_width="151dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"

        android:backgroundTint="#1E74FF"
        android:text="Selanjutnya"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geser1" />

</androidx.constraintlayout.widget.ConstraintLayout>